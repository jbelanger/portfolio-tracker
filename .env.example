# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5262

# JWT Configuration (Backend)
JWT_KEY=your_jwt_signing_key_here
JWT_ISSUER=your_issuer_here
JWT_AUDIENCE=your_audience_here

# Database Configuration (Backend)
# SQLite is used by default, connection string is auto-generated
# For custom database location, uncomment and modify:
# ConnectionStrings__DefaultConnection=Data Source=your_custom_path.db

# Development Settings
ASPNETCORE_ENVIRONMENT=Development
NODE_TLS_REJECT_UNAUTHORIZED=0